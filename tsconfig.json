{
    "include": ["./src/**/*"],
    "exclude": [
        "build",
        "node_modules"
    ],
    "compilerOptions": {
        "target": "es2015",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "lib": [
            "dom",
            "esnext",
        ],
        "importHelpers": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "src/*": [
                "src/*"
            ],
            "api/*": [
                "src/api/*"
            ],
            "components/*": [
                "src/components/*"
            ],
            "pages/*": [
                "src/pages/*"
            ],
            "assets/*": [
                "src/assets/*"
            ]
        },
        "strict": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
            }
        ],
    }
}